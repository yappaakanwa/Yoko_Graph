<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.madao3.yoko_graph.AwardActivity"
    android:background="#ffb1f3ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="タスクをこなした数"
            android:id="@+id/awardTextView"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/kuraun" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/clearTextView"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffffff"
                android:layout_margin="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton"
                android:background="@drawable/bakudan"
                android:layout_weight="1"
                android:onClick="bomb" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="←これまでのタスク\nとデータをすべて\n消去する"
                android:id="@+id/textView4"
                android:layout_weight="1.5"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:background="#ffff0400"
                android:layout_margin="10dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="戻る"
            android:id="@+id/backButton"
            android:onClick="back"
            android:background="#ff2fcfff"
            android:layout_margin="5dp" />

    </LinearLayout>

</RelativeLayout>
